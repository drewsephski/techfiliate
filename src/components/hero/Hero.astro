---
import CallToAction from '../common/CallToAction.astro';
---

<section class="relative min-h-screen flex items-center pt-16 overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-tech-gray to-tech-dark -z-10"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8 mb-8">
        <h1 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-tech-accent to-purple-500 text-transparent bg-clip-text animate-gradient">
          Building Digital Excellence
        </h1>
        <p class="text-xl text-gray-400">
          Transforming ideas into powerful digital solutions with cutting-edge technology and innovative design.
        </p>
        <div class="flex space-x-4">
          <CallToAction href="/contact" primary>Get Started</CallToAction>
          <CallToAction href="/projects">View Projects</CallToAction>
        </div>
      </div>
      
      <div class="relative group">
        <div class="absolute inset-0 bg-tech-accent/20 rounded-lg blur-xl group-hover:bg-tech-accent transition-all duration-300"></div>
        <img 
          src="/hero-illustration.svg" 
          alt="Digital Innovation Illustration" 
          class="text-center w-full h-auto transform group-hover:scale-125 transition-transform duration-300"
        />
      </div>
    </div>
  </div>
</section>