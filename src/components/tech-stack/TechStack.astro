---
import TechCategory from './TechCategory.astro';
import { frontendTech, backendTech, databaseTech, devopsTech } from '../../data/technologies';
---

<section class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-16 bg-gradient-to-r from-tech-accent to-purple-500 text-transparent bg-clip-text">
      Technology Stack
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 hover:border-tech-accent">
      <TechCategory 
        title="Frontend" 
        technologies={frontendTech}
        icon="fas fa-code"
      />
      <TechCategory 
        title="Backend" 
        technologies={backendTech}
        icon="fas fa-server"
      />
      <TechCategory 
        title="Database" 
        technologies={databaseTech}
        icon="fas fa-database"
      />
      <TechCategory 
        title="DevOps & Tools" 
        technologies={devopsTech}
        icon="fas fa-tools"
      />
    </div>
  </div>
</section>