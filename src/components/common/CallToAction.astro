---
interface Props {
  href: string;
  primary?: boolean;
}

const { href, primary = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    'inline-flex items-center px-6 py-3 rounded-lg font-medium transition-all duration-200',
    primary 
      ? 'bg-tech-accent/90 text-tech-dark hover:bg-tech-dark hover:text-white' 
      : 'bg-tech-dark text-white hover:bg-tech-accent hover:text-black'
  ]}
>
  <slot />
</a>