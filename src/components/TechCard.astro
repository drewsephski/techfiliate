---
interface Props {
  title: string;
  description: string;
  icon: string;
  link: string;
}

const { title, description, icon, link } = Astro.props;
---

<a href={link} class="group">
  <div class="bg-tech-gray p-6 rounded-xl transition-all duration-300 hover:scale-125 hover:shadow-[0_0_30px_rgba(0,245,212,0.6)] border border-gray-800 hover:border-tech-accent">
    <div class="text-4xl mb-4 text-tech-accent group-hover:scale-125 transition-transform duration-300">
      <i class={icon}></i>
    </div>
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-400">{description}</p>
  </div>
</a>